<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.lingarajsajjan.studentviolation.CreatAccount">


    <TextView
        android:id="@+id/gra"
        android:layout_width="111dp"
        android:layout_height="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="79dp"
        android:gravity="left"
        android:text="Name"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="166dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="138dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/gra"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="106dp"
        android:layout_height="24dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="19dp"
        android:gravity="left"
        android:text="Email"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/userId"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/userId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <RadioButton
        android:id="@+id/maleRbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="24dp"
        android:text="Male"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginStart="76dp" />

    <RadioButton
        android:id="@+id/femaleRbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="8dp"
        android:text="Female"
        app:layout_constraintLeft_toRightOf="@+id/maleRbtn"
        app:layout_constraintTop_toBottomOf="@+id/userdob"
        android:layout_marginStart="52dp" />

    <EditText
        android:id="@+id/userdob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/userId"
        app:layout_constraintVertical_bias="0.124"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="116dp"
        android:layout_height="28dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:text="DOB"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.128" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@+id/femaleRbtn"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="28dp"
        app:layout_constraintRight_toRightOf="@+id/femaleRbtn"
        android:layout_marginRight="28dp" />


</android.support.constraint.ConstraintLayout>
